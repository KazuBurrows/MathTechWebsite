@model MatchTechWebsite.Models.ManagerCreateViewModel;


<script src="~/js/script.js" defer></script>

<form asp-controller="Manager" asp-action="Create">
    <div class="form-group SCF">
        <input placeholder="Tournament Name" asp-for="TournamentName" type="text" />
        <span asp-validation-for="TournamentName" class="text-danger"></span>
    </div>
    <div class="form-group SCF">
        <select asp-for="TournamentType">
            @foreach (var item in Model.TournamentSelector)
            {
                <option value="@item">@item</option>
            }
        </select>
        <span asp-validation-for="TournamentType" class="text-danger"></span>
    </div>
    <div class="form-group SCF">
        <select class="chosen-select" multiple="true" asp-for="Teams" style="width:200px;">
            @foreach (var item in Model.TeamSelector)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <span asp-validation-for="Teams" class="text-danger"></span>
    </div>
    <div class="form-group SCF">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" asp-format="{0:yyyy-MM-dd}" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group SCF">
        <input asp-for="Rounds" placeholder="Rounds" min="1" />
        <span asp-validation-for="Rounds" class="text-danger"></span>
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
</form>